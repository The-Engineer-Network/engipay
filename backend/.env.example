# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Database Configuration
DB_NAME=engipay_db
DB_USER=engipay_user
DB_PASSWORD=your_secure_password_here
DB_HOST=localhost
DB_PORT=5432
DB_SSL=false
DB_POOL_MAX=10
DB_POOL_MIN=2
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Blockchain RPC URLs - Backend Dev 1
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
STARKNET_RPC_URL=https://starknet-mainnet.public.blastapi.io
BITCOIN_RPC_URL=https://blockchain.info

# Alternative RPC Providers
# ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
# ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Price Feed APIs
COINGECKO_API_KEY=optional_for_higher_rate_limits

# DeFi Protocol APIs (Backend Dev 2)
VESU_API_KEY=your_vesu_api_key
TROVE_API_KEY=your_trove_api_key
ENDURFI_API_KEY=your_endurfi_api_key

# Cross-Chain Integration (Backend Dev 3)
ATOMIQ_API_KEY=your_atomiq_api_key
ATOMIQ_WEBHOOK_SECRET=your_atomiq_webhook_secret

# Notification Services (Backend Dev 4)
SENDGRID_API_KEY=your_sendgrid_api_key
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Smart Contract Addresses (After deployment)
ESCROW_CONTRACT_ADDRESS=0x...
ENGI_TOKEN_CONTRACT_ADDRESS=0x...
REWARD_DISTRIBUTOR_CONTRACT_ADDRESS=0x...

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=10

# Logging
LOG_LEVEL=info
LOG_FILE=logs/engipay.log
